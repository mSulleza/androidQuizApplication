<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/l1_question_bg"
    tools:context=".MultipleChoice">

    <TextView
        android:id="@+id/l3_question_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center_vertical|fill_horizontal|center|fill"
        android:text="@string/question"
        android:textSize="36sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="27dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="332dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="440dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l3_question_textview"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/a_button"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/multiple_up"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline9" />

            <Button
                android:id="@+id/c_button"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/multiple_up"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.101"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a_button"
                app:layout_constraintVertical_bias="1.0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/b_button"
                android:layout_width="124dp"
                android:layout_height="43dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/multiple_up"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/a_button"
                app:layout_constraintTop_toTopOf="@+id/guideline9" />

            <Button
                android:id="@+id/d_button"
                android:layout_width="124dp"
                android:layout_height="43dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:padding="4dp"
                android:background="@drawable/multiple_up"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.895"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b_button"
                app:layout_constraintVertical_bias="1.0" />
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>