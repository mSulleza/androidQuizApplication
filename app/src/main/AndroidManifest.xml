<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uplb.mark.nasc9">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelSelection"
            android:launchMode="singleTask" />
        <activity
            android:name=".Level_1"
            android:launchMode="singleTask" />
        <activity
            android:name=".l1_question_identification_activity"
            android:launchMode="singleTask" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".TrueOrFalse"
            android:launchMode="singleTask" />
        <activity
            android:name=".Level_2"
            android:launchMode="singleTask" />
        <activity
            android:name=".Level_3"
            android:launchMode="singleTask" />
        <activity
            android:name=".MultipleChoice"
            android:launchMode="singleTask" />
        <activity
            android:name=".Level_4"
            android:launchMode="singleTask" />
        <activity
            android:name=".Level_5"
            android:launchMode="singleTask" />
        <activity
            android:name=".About"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>